{
  "name": "vedajs",
  "description": "Shader Art Framework",
  "version": "0.9.0",
  "author": "fand <fand.gmork@gmail.com>",
  "bugs": "https://github.com/fand/vedajs/issues",
  "dependencies": {
    "is-video": "^1.0.1",
