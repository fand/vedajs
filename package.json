  },
  "devDependencies": {
    "@types/three": "^0.92.14",
    "@types/webmidi": "^2.0.2",
    "husky": "^0.14.3",
    "lint-staged": "^7.2.0",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.13.7",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.14.0",
    "tslint-plugin-prettier": "^2.0.0",
